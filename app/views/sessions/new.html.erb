<div class="backdrop">
   <%= form_tag('/login', class: "form-signin text-center") do %>
      <p id=”alert”><%= alert %></p>
      <img class="mb-4" src="https://upload.wikimedia.org/wikipedia/commons/9/96/WeChat_logo_Android.png" alt="" width="72" height="72">
      <h1 class="h3 mb-3 font-weight-normal">Login</h1>
      <%= text_field_tag(:username, "", {placeholder: "username", class: "form-control top-input", required: "", autofocus: ""}) %>
      <%= password_field_tag(:password, "", {placeholder: "password", class: "form-control bottom-input"})%>
      <%= submit_tag("Login", {class: "btn btn-lg btn-primary btn-block"})%>
      <%= link_to('Back', '/', {class: "btn btn-lg btn-light btn-block"}) %>
   <%end%>
</div>