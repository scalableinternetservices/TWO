<p id="notice"><%= notice %></p>

<h1>Global Whatever Chats</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @whatever_chats.each do |whatever_chat| %>
      <% if whatever_chat.to_user_id == "0" %>
      <tr>
        <td><%= whatever_chat.title %></td>
        <td><%= link_to 'Show', whatever_chat %></td>
        <td><%= link_to 'Edit', edit_whatever_chat_path(whatever_chat) %></td>
        <td><%= link_to 'Destroy', whatever_chat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Show Comments', whatever_chat, method: :show%></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Whatever Chat', new_whatever_chat_path %>
<br>
<%= link_to 'Logout', '/logout' %>
