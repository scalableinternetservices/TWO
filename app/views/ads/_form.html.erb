<%= form_with(model: ad, local: true, html: {multipart: true}) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, {class: "form-control", required: "", autofocus: ""} %>
    </div>
    <div class="form-group">
      <%= f.label :tags %>
      <%= f.text_field :tags, {class: "form-control", placeholder: "tag 1, tag 2, ..."} %>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, accept: 'image/*' %>
    </div>

    <%= f.submit "Upload", {class: "btn btn-primary float-right"} %>
  <% end %>